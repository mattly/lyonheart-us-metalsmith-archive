doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge,chrome=1")

    meta(name="viewport" content="width=device-width, initial-scale=1.0")

    title= page.title + " | lyonheart.us"
    meta(property="og:title" content=page.title)

    meta(name="twitter:card" content="article")
    meta(property="og:type" content="article")

    meta(name="author" content="Matthew Lyon")
    meta(name="twitter:site" content="@mattly")
    meta(name="twitter:creator" content="@mattly")

    if page.summary
      meta(name="description" content=page.summary)
      meta(property="og:description" content=page.summary)

    meta(property="og:url" content=page.full_url)

    script(type="text/javascript" src="//use.typekit.net/xmr0fxq.js")
    script(type="text/javascript").
      try{Typekit.load();}catch(e){}

    script(type="text/javascript" src="http://code.jquery.com/jquery-2.1.0.min.js")
    script(type="text/javascript" src="/" + fingerprint["assets/articles.js"])
    link(href="/" + fingerprint["assets/main.css"] rel="stylesheet")

    link(rel="canonical" href=page.full_url)
    link(rel="alternate" type="application/rss+xml" title="RSS - All Posts" href=site.url + "/index.xml")

    script(type="text/javascript").
      (function(i,s,o,g,r,a,m){i['googleanalyticsobject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-854173-4', 'auto');
      ga('send', 'pageview');

  body(class=page.bodyClass)
    div#not-footer
      #page-content
        != content
      #footnoter
        .footnote-liner
          .footnote-number
          .footnote-content
      #push
    footer#footer.main-footer
      #about-links
        #about.wide
          h2 About Me
          p.
            I'm Matthew Lyon.
            I live with my wife in Portland, Ore. where I build software, mostly web
            apps. I enjoy photography, making encaustic paintings, building and playing
            with synthesizers, and brewing beer.
        nav#contact
          h2 Contact
          ul.footer-link-list
            each thing, name in site.links.contacts
              li
                a(href=thing.href)
                  .icon(class=["icon-"+thing.icon])
                  = name
        nav#streams
          h2 Streams
          ul.footer-link-list
            each stream, name in site.links.streams
              li
                a(href=stream.href)
                  .icon(class=["icon-"+name])
                  = name
      #copyright
        div
          p
            strong Copyright &copy; 2014
            |  &#x2022; Matthew Lyon


