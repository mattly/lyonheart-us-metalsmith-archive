doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge,chrome=1")

    meta(name="viewport" content="width=device-width, initial-scale=1.0")

    title= page.title + " | lyonheart.us"
    if page.summary
      meta(name="description" content=page.summary)
  
    if page.siblings['_banner.jpg']
      - var pageImage = page.siblings['_banner.jpg'].full_url
    else
      - var pageImage = null

    // opengraph
    meta(property="og:type" content="article")
    meta(property="og:title" content=page.title)
    meta(property="og:site_name" content=site.name)
    meta(property="og:url" content=page.full_url)
    meta(property="og:locale" content="en_US")
    if pageImage
      meta(property="og:image" content=pageImage)
    if page.summary
      meta(property="og:description" content=page.summary)
    if page.collection
      meta(property="og:type" content="article")
      meta(property="article:author" content="Matthew Lyon")
      meta(property="article:published_time" content=isoDate(page.date))
  
    // twitter
    if pageImage
      meta(name="twitter:card" content="summary_large_image")
      meta(name="twitter:image" content=pageImage)
    else
      meta(name="twitter:card" content="summary")
    meta(name="twitter:site" content="@mattly")
    meta(name="twitter:creator" content="@mattly")
    meta(name="twitter:title" content=page.title)
    if page.summary
      meta(property="twitter:description" content=page.summary)

    script(type="text/javascript" src="//use.typekit.net/qat0pnp.js")

    script(type="text/javascript").
      try{Typekit.load();}catch(e){}

    script(type="text/javascript" src="http://code.jquery.com/jquery-2.1.0.min.js")
    if page.scripts
      each script in page.scripts
        script(type="text/javascript" src=script)
    script(type="text/javascript" src="/" + fingerprint["assets/articles.js"])
    link(href="/" + fingerprint["assets/main.css"] rel="stylesheet")
    if page.styles
      each style in page.styles
        link(href=style rel="stylesheet")

    link(rel="canonical" href=page.full_url)
    link(rel="alternate" type="application/rss+xml" title="RSS - All Posts" href=site.url + "/index.xml")


  body(class=page.bodyClass + " " + page.slug)
    #page-content!= content
    #footnoter
      .footnote-liner
        .footnote-number
        .footnote-content

    footer#footer
      .liner
        #links
          each link in site.links
            a(href=link.href title=link.title)
              .icon(class=["icon-"+link.icon])
        #copyright
          p
            span.notice Copyright &copy; 2015
            span.name  &#x2022; Matthew Lyon

