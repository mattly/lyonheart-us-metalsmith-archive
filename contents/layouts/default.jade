doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge,chrome=1")

    meta(name="viewport" content="width=device-width, initial-scale=1.0")

    meta(name="twitter:summary_large" content="article")
    meta(property="og:type" content="article")

    title= page.title + " | lyonheart.us"
    meta(property="og:title" content=page.title)
    meta(property="twitter:title" content=page.title)

    meta(name="twitter:site" content="@mattly")
    meta(property="og:site_name" content=site.name)

    meta(name="author" content="Matthew Lyon")
    meta(name="twitter:creator" content="@mattly")

    if page.summary
      meta(name="description" content=page.summary)
      meta(property="og:description" content=page.summary)
      meta(property="twitter:description" content=page.summary)
  
    if page.siblings['_banner.jpg']
      meta(property="og:image" content=page.siblings['_banner.jpg'].full_url)

    meta(property="og:url" content=page.full_url)

    script(type="text/javascript" src="//use.typekit.net/qat0pnp.js")

    script(type="text/javascript").
      try{Typekit.load();}catch(e){}

    script(type="text/javascript" src="http://code.jquery.com/jquery-2.1.0.min.js")
    if page.scripts
      each script in page.scripts
        script(type="text/javascript" src=script)
    script(type="text/javascript" src="/" + fingerprint["assets/articles.js"])
    link(href="/" + fingerprint["assets/main.css"] rel="stylesheet")
    if page.styles
      each style in page.styles
        link(href=style rel="stylesheet")

    link(rel="canonical" href=page.full_url)
    link(rel="alternate" type="application/rss+xml" title="RSS - All Posts" href=site.url + "/index.xml")

    script(type="text/javascript").
      (function(i,s,o,g,r,a,m){i['googleanalyticsobject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-854173-4', 'auto');
      ga('send', 'pageview');

  body(class=page.bodyClass + " " + page.slug)
    div#meta(style="display:none")
      dl
        each val, key in page
          dt= key
          dd= val

    #page-content!= content
    #footnoter
      .footnote-liner
        .footnote-number
        .footnote-content

    footer#footer
      .liner
        #links
          each link in site.links
            a(href=link.href title=link.title)
              .icon(class=["icon-"+link.icon])
        #copyright
          p
            span.notice Copyright &copy; 2015
            span.name  &#x2022; Matthew Lyon

