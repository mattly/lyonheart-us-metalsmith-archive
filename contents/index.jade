.page-home
  header.main-header
    hgroup.name
      p.lead Hi, I'm
      h1
        span.first Matthew
        |  
        span.last Lyon
  section.main-content
    p.bio I help humans and computers communicate.  I make code, photographs, encaustic paintings, synth bloops and beer.
    .archive-list
      h3 Essays
      each article in collections.articles
        article
          header
            a(href=article.url)
              h1= article.title
              div.article-metadata
                time(pubdate=true datetime=formatDate(article.date, "YYYY-MM-DDTHH:mm:SSZ"))
                  = formatDate(article.date, "MMMM Do YYYY")
                if article.subtitle
                  | &nbsp;
                  h2= article.subtitle
      h3 Talks
      each talk in collections.talks
        article
          header
            a(href=talk.url)
              h1= talk.title
              div.article-metadata
                time(pubdate=true datetime=formatDate(talk.date, "YYYY-MM-DDTHH:mm:SSZ"))
                  = formatDate(talk.date, "MMMM Do YYYY")
                if talk.summary
                  | &nbsp;
                  h2= talk.summary
